<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <FrameLayout
        android:id="@+id/activity_main_foreground_hide_cover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_main_foreground_hide_cover_image"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/activity_main_foreground_hide_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:text="Title"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_foreground_hide_time"
        app:layout_constraintStart_toEndOf="@+id/activity_main_foreground_hide_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/activity_main_foreground_hide_time"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_foreground_hide_play"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_main_foreground_hide_time_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="-3:09" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_main_foreground_hide_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_foreground_hide_next"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/exo_play"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_48"
            android:tint="@color/MaterialLightBlue700" />

        <ImageView
            android:id="@+id/exo_pause"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pause_48"
            android:tint="@color/MaterialLightBlue700" />
    </FrameLayout>

    <ImageView
        android:id="@+id/activity_main_foreground_hide_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="6dp"
        android:src="@drawable/ic_skip_next_48"
        android:tint="@color/MaterialLightBlue700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

