<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_foreground_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <FrameLayout
        android:id="@+id/activity_main_foreground_show_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_main_foreground_show_dropdown_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_dropdown_24"
            android:tint="@android:color/black"
            android:tintMode="src_atop" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_foreground_show_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.exoplayer2.ui.PlayerControlView
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show_timeout="0" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_main_foreground_show_prev"
        android:layout_width="82dp"
        android:layout_height="72dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_main_foreground_show_play">

        <ImageView
            android:id="@+id/activity_main_foreground_show_prev_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_skip_previous_48"
            android:tint="@color/MaterialLightBlue700"
            android:tintMode="src_atop" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_main_foreground_show_play"
        android:layout_width="82dp"
        android:layout_height="72dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/MaterialLightBlue700"
            app:cardCornerRadius="36dp">

            <ImageView
                android:id="@+id/activity_main_foreground_show_play_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pause_48" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_main_foreground_show_next"
        android:layout_width="82dp"
        android:layout_height="72dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_main_foreground_show_play">

        <ImageView
            android:id="@+id/activity_main_foreground_show_next_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_skip_next_48"
            android:tint="@color/MaterialLightBlue700"
            android:tintMode="src_atop" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_main_foreground_show_shuffle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/MaterialLightBlue700"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/activity_main_foreground_show_shuffle_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shuffle_24" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_main_foreground_show_repeat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/activity_main_foreground_show_repeat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_repeat_24"
            android:tint="@color/MaterialLightBlue700"
            android:tintMode="src_atop" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>